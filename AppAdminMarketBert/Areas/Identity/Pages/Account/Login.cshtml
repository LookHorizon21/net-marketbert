@page
@model LoginModel

@{
    ViewData["Title"] = "Acceso de Usuarios";
}

<div class="col-lg-4 mx-auto">

    <div class="auth-form-light text-left py-5 px-4 px-sm-5">

        <div class="brand-logo">
            <img src="~/images/LogoMarket.png" alt="logo">
        </div>

        <div class="d-sm-flex flex-column align-items-center">
            <h4>¡Hola! Empecemos</h4>
            <h6 class="fw-light">Inicia sesión para continuar.</h6>
        </div>

        <form class="pt-3" id="account" method="post">
            
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        
            <div class="form-group">
                <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="Correo">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" placeholder="Contraseña">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="d-sm-flex justify-content-center mt-3">
                <button type="submit" id="login-submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Iniciar sesión</button>
            </div>

            <div class="text-center mt-4 fw-light">
                ¿No tienes una cuenta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary">Registrate Aquí</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
