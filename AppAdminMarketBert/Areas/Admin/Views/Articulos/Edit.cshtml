@model MarketBert.Models.ViewModels.ArticuloVM

@{
    ViewData["Title"] = "Editar Articulo";
}

<div class="col-md-9 grid-margin stretch-card">

    <div class="card">

        <div class="card-body">

            <h4 class="card-title">Editar Artículo</h4>

            <form method="POST" asp-action="Edit" enctype="multipart/form-data">

                <!--ID del artículo -->
                <input type="hidden" asp-for="Articulo.Id" />

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <label for="Item-name" class="col-sm-2 col-form-label">Nombre</label>
                    <div class="col-sm-6">
                        <input asp-for="Articulo.Nombre" class="form-control" placeholder="Ingresa el nombre">
                        <span asp-validation-for="Articulo.Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Articulo.Descripcion" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <textarea asp-for="Articulo.Descripcion" class="form-control" style="height: 300px;"></textarea>
                        <span asp-validation-for="Articulo.Descripcion" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Categoría" class="col-sm-2 col-form-label">Categoría</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(m => m.Articulo.CategoriaId, Model.ListaCategorias,
                                 "-Por favor seleccione una categoría-", new { @class = "form-control" })
                        <span asp-validation-for="Articulo.CategoriaId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Articulo.UrlImagen" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-6">
                        <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                        <span asp-validation-for="Articulo.UrlImagen" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary me-2">Editar Artículo</button>
                <a asp-action="Index" class="btn btn-light">Cancelar</a>

            </form>
        </div>
    </div>
</div>

<div class="col-md-3 grid-margin stretch-card">

    <div class="card">

        <div class="card-body">
            <img src="@Model.Articulo.UrlImagen" width="300px" style="width: 100%;border-radius:5px; border:1px solid #bbb9b9" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.8.3/tinymce.min.js" integrity="sha512-VCEWnpOl7PIhbYMcb64pqGZYez41C2uws/M/mDdGPy+vtEJHd9BqbShE4/VNnnZdr7YCPOjd+CBmYca/7WWWCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}