@model MarketBert.Models.CategoriaMd

@{
    ViewData["Title"] = "Editar Categoría";
}

<div class="col-md-12 grid-margin stretch-card">

    <div class="card">

        <div class="card-body">

            <h4 class="card-title">Editar categoría</h4>

            <form method="POST" asp-action="Edit">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <label asp-for="Nombre" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-6">
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Orden" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-2">
                        <input asp-for="Orden" class="form-control" placeholder="Ingresa el orden">
                        <span asp-validation-for="Orden" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary me-2">Editar Categoría</button>
                <a asp-action="Index" class="btn btn-light">Cancelar</a>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}